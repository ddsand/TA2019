<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityWaitingpay">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/toolbar" />
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:background="@color/grey_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/spacing_large"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/grey_60"
                        android:textAlignment="center"
                        android:text="@string/paymentone"
                        android:layout_margin="@dimen/spacing_large"/>
                    <!--<TextView-->
                        <!--android:id="@+id/jambayar"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textAllCaps="true"-->
                        <!--android:textStyle="bold"-->
                        <!--android:textSize="25dp"-->
                        <!--android:textColor="@color/grey_60"-->
                        <!--android:textAlignment="center"-->
                        <!--android:text="27 Jam : 57 Menit"-->
                        <!--/>-->
                    <TextView
                        android:id="@+id/datepay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_60"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="(Before Sabtu,29 Juni 2018)"
                        android:layout_margin="@dimen/spacing_large"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_medium"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            <LinearLayout
                android:background="@color/isipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/spacing_large"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_60"
                    android:text="@string/exp_payment"
                    android:layout_margin="@dimen/spacing_large"/>
            </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/spacing_large"
                            android:paddingTop="@dimen/spacing_middle">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_middle"
                                android:layout_marginLeft="@dimen/spacing_mlarge"
                                android:layout_marginRight="@dimen/spacing_mlarge"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:text="@string/transferto"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_90"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2px"
                                android:layout_marginLeft="@dimen/spacing_middle"
                                android:layout_marginRight="@dimen/spacing_middle"
                                android:background="@color/grey_10" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/spacing_medium"
                                android:layout_margin="@dimen/spacing_large">
                                <ImageView
                                    android:layout_marginRight="10dp"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/mandiri"/>
                                <TextView
                                    android:id="@+id/nomorrek"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="1400015262307"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <ImageButton
                                    android:id="@+id/copyrek"
                                    android:layout_width="?attr/actionBarSize"
                                    android:layout_height="?attr/actionBarSize"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/ic_content_copy"
                                    android:tint="@color/grey_40" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accountname"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_90"
                                android:layout_marginBottom="@dimen/spacing_large"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2px"
                                android:layout_marginLeft="@dimen/spacing_middle"
                                android:layout_marginRight="@dimen/spacing_middle"
                                android:background="@color/grey_10" />
                            <TextView
                                android:layout_marginTop="@dimen/spacing_large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/numberpay"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_90"
                                />
                            <TextView
                                android:id="@+id/hargatotal"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="192.168 IDR"
                                android:textSize="20dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:textColor="@color/colorWarning"
                                android:layout_marginBottom="@dimen/spacing_large"
                                />
                            <LinearLayout
                                android:background="@color/grey_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="@dimen/spacing_large"
                                >
                                <LinearLayout
                                    android:padding="10dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/spacing_medium"
                                        android:src="@drawable/ic_dots"/>
                                    <TextView
                                        android:padding="@dimen/spacing_medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/digitlast"
                                        android:textAlignment="textStart"
                                        android:textColor="@color/grey_40"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2px"
                                android:layout_marginLeft="@dimen/spacing_middle"
                                android:layout_marginRight="@dimen/spacing_middle"
                                android:background="@color/grey_10" />

                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/lyt_okpay"
            style="@style/RippleStyleBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAddCart"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxlarge"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_okpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:text="Check Status Payment"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>